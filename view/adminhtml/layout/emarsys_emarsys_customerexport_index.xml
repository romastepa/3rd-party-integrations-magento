<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.main.actions">
            <block class="Magento\Backend\Block\Store\Switcher" name="adminhtml.report.grid.store_switcher" as="store_switcher">
                <arguments>
                    <argument name="use_confirm" xsi:type="string">1</argument>
                    <argument name="switch_websites" xsi:type="string">1</argument>
                    <argument name="switch_store_groups" xsi:type="string">0</argument>
                    <argument name="switch_store_views" xsi:type="string">0</argument>
                    <argument name="default_selection_name" xsi:type="string" translate="true">All Websites</argument>
                    <argument name="show_manage_stores_link" xsi:type="string">0</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Emarsys\Emarsys\Block\Adminhtml\Customerexport\Form"
                   name="emarsys_emarsys_customer_export_form"/>
            <block class="Emarsys\Emarsys\Block\Adminhtml\Customerexport\Edit"
                   name="emarsys_emarsys_customer_export_edit"/>
            <block class="Emarsys\Emarsys\Block\Adminhtml\Customerexport\Edit\Tab\Form"
                   name="emarsys_emarsys_customer_export_edit_tab_form"/>
        </referenceContainer>
    </body>
</page>
