                <div id="dept2"></div>
                <div id="dept3"></div>
                <div id="dept4"></div>
                <div id="dept5"></div>
                <div id="dept6"></div>
                <div id="dept7"></div>
                <div id="dept8"></div>
                <div id="dept9"></div>
                <div id="dept10"></div>
                <script type="text/html" id="<?php echo $pageHandleData['templateId']; ?>">
                    <![CDATA[
                    <h4>{{= SC.title }}</h4>
                    {{ for (var i = 0; i < SC.page.products.length; i++) { }}
                    {{ var p = SC.page.products[i]; }}
